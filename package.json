{
  "name": "simplecolyseusserver",
  "version": "1.0.0",
  "description": "Simple prototype colyseus based game",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc & npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack",
    "start": "ts-node src/server/index.ts -d",
    "start:dev": "ts-node-dev --watch \"src/**/*\" --respawn --transpile-only src/server/index.ts -d",
    "start:prod": "node dist/server/index.js",
    "test": "jest",
    "copy": "copyfiles -u 1 \"src/**/*.html\" \"dist/\"",
    "lint": "eslint --ext .js,.ts . --ignore-path .gitignore",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "colyseus": "^0.14.24",
    "colyseus.js": "^0.14.13",
    "express": "^4.18.2",
    "nipplejs": "^0.10.1",
    "sat": "^0.9.0",
    "serve-index": "^1.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.1",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1"
  }
}
